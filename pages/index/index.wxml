<searchInput></searchInput>
<!-- 轮播图的开始 -->
<view class="index_swiper">
  <swiper class="handle-swiper"
    indicator-dots
    autoplay
    circular
  >
    <swiper-item class="handle-swiper-item"
      wx:for="{{SwiperList}}"
      wx:key="goods_id"
    >
      <image mode="widhtFix" src="{{item.image_src}}"></image>
    </swiper-item>
  </swiper>
</view>
<!-- 轮播图的结束 -->


<!-- 导航栏的开始 -->
  <view class="index_naveCategry">
      <navigator class="naveCategry"
         wx:for="{{NavrCategory}}"
          wx:key="name"
      >
          <image mode="widthFix" src="{{item.image_src}}"></image>
      </navigator>
  </view>
<!-- 导航栏的结束 -->