page {
  background: #eee;
}
.bg_image {
  height: 45vh;
  overflow: hidden;
  position: relative;
}
.bg_image .big_img image {
  filter: blur(10rpx);
}
.bg_image .big_img_imahe {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 50%;
}
.bg_image .big_img_imahe image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.bg_image .big_img_imahe .userName {
  color: #fff;
}
