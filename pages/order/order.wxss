button {
  width: 50%;
}
.first_tab .order_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.first_tab .order_item .order_no_row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.first_tab .order_item .order_price_row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.first_tab .order_item .order_price_row .order_price_value {
  color: var(--themeColor);
  font-size: 30rpx;
}
.first_tab .order_item .order_time_row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
